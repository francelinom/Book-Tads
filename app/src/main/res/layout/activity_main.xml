<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aliceBlue"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonCadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/cor3"
            android:padding="20dp"
            android:text="Cadastrar"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonListarLivros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_btn"
            android:padding="20dp"
            android:text="Listar Livros"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_btn"
            android:padding="20dp"
            android:text="Auto Complete"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_btn"
            android:padding="20dp"
            android:text="List View"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_btn"
            android:padding="20dp"
            android:text="Grid View"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_btn"
            android:padding="20dp"
            android:text="Recycler View"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonSwipeDragDrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_btn"
            android:padding="20dp"
            android:text="Swipe Drag Drop"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonPageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_btn"
            android:padding="20dp"
            android:text="Page View"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:textStyle="bold"/>


    </LinearLayout>
</ScrollView>