<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16pt"
    tools:context=".activity.AutoCompleteActivity">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionHint="Digite o Titulo do Livro"
        android:completionThreshold="1"
        android:hint="Titulo do Livro">

    </AutoCompleteTextView>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3">

        <TextView android:text="Titulo: " />

        <TextView
            android:id="@+id/textTitulo"
            android:text="" />

        <TextView android:text="Autor: " />

        <TextView
            android:id="@+id/textAutor"
            android:text="" />

        <TextView android:text="Ano: " />

        <TextView
            android:id="@+id/textAno"
            android:text="" />

        <TextView android:text="Nota: " />

        <TextView
            android:id="@+id/textNota"
            android:text="" />


    </GridLayout>

</LinearLayout>